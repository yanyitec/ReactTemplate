{
    "compilerOptions": {
        "module": "amd",   //指定生成哪个模块系统代码
        "target": "es3",
        "noImplicitAny": false, //在表达式和声明上有隐含的'any'类型时报错。
        //"sourceMap": true,     //用于debug   
        "rootDir":"./src/",      //仅用来控制输出的目录结构--outDir。
        "outDir":"./wwwroot/",     //重定向输出目录。   
        "watch":true ,           //在监视模式下运行编译器。会监视输出文件，在它们改变时重新编译。
        "declarationDir":"./typings",
        "declaration":true   ,
        "removeComments":false,
        "jsx":"react",
        //"allowJs":true, //是否允许编译js文件，默认false
        "alwaysStrict":true, //是否总是以严格模式解析文件，并未每个源文件生成use strict语句
        
        //"outFile": "lib/require.js"
    },
    //"files":["ts/promise.ts","ts/require.ts"],
    

  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "@typings",
    "typings",
    "dev-env",
    "node_modules",
    "wwwroot",
    "dev-env"

  ]
}